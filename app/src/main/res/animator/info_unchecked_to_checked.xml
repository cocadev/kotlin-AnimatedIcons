<?xml version="1.0" encoding="utf-8"?>
<objectAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@android:integer/config_shortAnimTime"
    android:interpolator="@android:interpolator/accelerate_decelerate"
    android:valueType="floatType">

    <propertyValuesHolder
        android:propertyName="scaleX"
        android:valueFrom="1"
        android:valueTo="2"
        android:valueType="floatType">
        <keyframe
            android:fraction="0"
            android:value="1" />
        <keyframe
            android:fraction="0.5"
            android:value="1" />
        <keyframe
            android:fraction="1"
            android:value="2" />
    </propertyValuesHolder>

    <propertyValuesHolder
        android:propertyName="scaleY"
        android:valueFrom="1"
        android:valueTo="2"
        android:valueType="floatType">
        <keyframe
            android:fraction="0"
            android:value="1" />
        <keyframe
            android:fraction="0.5"
            android:value="1" />
        <keyframe
            android:fraction="1"
            android:value="2" />
    </propertyValuesHolder>

    <propertyValuesHolder
        android:propertyName="translateY"
        android:valueFrom="0"
        android:valueTo="16"
        android:valueType="floatType">
        <keyframe
            android:fraction="0"
            android:value="0" />
        <keyframe
            android:fraction="0.5"
            android:value="18" />
        <keyframe
            android:fraction="1"
            android:value="16" />
    </propertyValuesHolder>
</objectAnimator>