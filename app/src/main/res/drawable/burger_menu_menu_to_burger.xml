<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/burger_menu_menu_vector">

    <target android:name="top_line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/burger_menu_duration"
                android:propertyName="translateY"
                android:startOffset="0"
                android:valueFrom="18"
                android:valueTo="27"
                android:valueType="floatType" />
        </aapt:attr>
    </target>

    <target android:name="top_path">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/burger_menu_duration"
                android:propertyName="pathData"
                android:startOffset="0"
                android:valueFrom="@string/burger_menu_top_path_line"
                android:valueTo="@string/burger_menu_top_path_curve"
                android:valueType="pathType" />
        </aapt:attr>
    </target>

    <target android:name="middle_line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/burger_menu_duration"
                android:propertyName="translateY"
                android:startOffset="@integer/burger_menu_offset1"
                android:valueFrom="31"
                android:valueTo="39"
                android:valueType="floatType" />
        </aapt:attr>
    </target>

    <target android:name="bottom_line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/burger_menu_duration"
                android:propertyName="translateY"
                android:startOffset="0"
                android:valueFrom="46"
                android:valueTo="52"
                android:valueType="floatType" />
        </aapt:attr>
    </target>

    <target android:name="drip">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/burger_menu_duration"
                    android:propertyName="translateY"
                    android:startOffset="@integer/burger_menu_offset1"
                    android:valueTo="36.5"
                    android:valueFrom="28.5"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="@integer/burger_menu_duration"
                    android:propertyName="translateY"
                    android:startOffset="@integer/burger_menu_offset2"
                    android:valueTo="41.5"
                    android:valueFrom="36.5"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>